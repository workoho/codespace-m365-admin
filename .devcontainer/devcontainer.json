// More info about devcontainer.json: https://containers.dev/implementors/json_reference/
{
	"name": "ğŸ§‘â€ğŸ’¼ M365 Admin",
	"image": "ghcr.io/workoho/devcontainers/m365-admin:main",
  // ğŸ‘† This pre-built image includes PowerShell and common PowerShell modules already.

	// ğŸ‘‡ Additional Features to add to the Dev Container. More info: https://containers.dev/implementors/features.
  "features": {
    // ğŸ‘‡ Uncomment to install additional PowerShell modules and scripts to the container
    // ğŸ‘‡    See documentation for more details:
    // ğŸ‘‡    https://github.com/jpawlowski/devcontainer-features/tree/main/src/powershell-extended
    // "ghcr.io/jpawlowski/devcontainer-features/powershell-extended:1": {
    //   "repositories": "",
    //   "resources": ""
    // }

    // Azure CLI with some extensions for administration
    "ghcr.io/devcontainers/features/azure-cli:1": {
      "version": "latest",
      "extensions": "account, automation, ssh",
      "installBicep": false
    },

    // GitHub CLI
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    },

    // Pre-configured dotfiles for Codespaces only (see below for Dev Containers)
    // Note that dotfiles configured in your GitHub profile will take precedence.
    "ghcr.io/jpawlowski/devcontainer-features/codespaces-dotfiles:1": {
      // ğŸ‘‡ You may clone this repository to start with your own dotfiles
      "repository": "https://github.com/workoho/devcontainer-dotfiles.git"
    },

    // Extension Dependencies
    "ghcr.io/devcontainers-contrib/features/shfmt:1": {}
  },

	// ğŸ‘‡ Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// ğŸ‘‡ Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "",

	"customizations": {
    "vscode": {
      // ğŸ‘‡ Configure VS Code specific settings.
      "settings": {
        // ğŸ‘‡ You may clone this repository to start with your own dotfiles
        // "dotfiles.repository": "https://github.com/workoho/devcontainer-dotfiles.git", // Only works for Dev Containers, not in Codespaces
			  "debug.openDebug": "neverOpen",
        "editor.formatOnSave": false,
			  "editor.formatOnType": true,
			  "editor.formatOnPaste": true,
			  "editor.mouseWheelZoom": true,
			  "editor.tabCompletion": "on",
        "terminal.integrated.defaultProfile.linux": "pwsh",
        "terminal.integrated.profiles.linux": {
          "pwsh": {
            "name": "PowerShell",
            "overrideName": true,
            "path": "pwsh",
            "args": [
              "-Login",
              "-NoLogo",
              "-Interactive"
            ],
            "icon": "terminal-powershell"
          },
          "bash": {
            "name": "Bash",
            "overrideName": true,
            "path": "bash",
            "args": [
              "--login"
            ],
            "icon": "terminal-bash"
          },
          "zsh": {
            "name": "Zsh",
            "overrideName": true,
            "path": "zsh",
            "args": [
              "--login",
              "--interactive"
            ],
            "icon": "terminal-debian"
          }
        },
			  "window.zoomLevel": 0,
			  "workbench.iconTheme": "vscode-icons",
        "[markdown]": {
          "editor.defaultFormatter": "yzhang.markdown-all-in-one"
        }
			},

      // ğŸ‘‡ Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        // Container development related extensions
        "ms-vscode-remote.remote-containers",
        "github.codespaces",

        // Code Editing related extensions
        "editorconfig.editorconfig",

        // GitHub related extensions
        "ms-vscode.vscode-github-issue-notebooks",
        "github.vscode-pull-request-github",
        "github.vscode-github-actions",
        "me-dutour-mathieu.vscode-github-actions",

        // Markdown related extensions
        "bierner.github-markdown-preview",
        "davidanson.vscode-markdownlint",
        "yzhang.markdown-all-in-one",

        // Bash related extensions
        "timonwong.shellcheck",
        "foxundermoon.shell-format",
        "mads-hartmann.bash-ide-vscode",
        "Remisa.shellman",
        "rogalmic.bash-debug",
        "rpinski.shebang-snippets",

        // PowerShell related extensions
        "ms-vscode.powershell",
        "martinfliegner.dark-powershell-theme",

        // YAML related extensions
        "redhat.vscode-yaml",

        // Azure related extensions
        "ms-vscode.azurecli",

        // VS Code related extensions
        "vscode-icons-team.vscode-icons"
      ]
		},
    "dotfiles": {
      "repository": "https://github.com/workoho/devcontainer-dotfiles.git"
    }
	},

	// ğŸ‘‡ Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"

	// ğŸ‘‡ Set environment variables that should apply to the entire container
	"containerEnv": {
		"POWERSHELL_UPDATECHECK": "LTS",
		"POWERSHELL_TELEMETRY_OPTOUT": "0"
	},

	// ğŸ‘‡ Set environment variables for VS Code and related sub-processes (terminals, tasks, debugging, etc.)
	"remoteEnv": {
    "PATH": "${containerEnv:PATH}:${localEnv:HOME}/.local/bin:${containerWorkspaceFolder}/Scripts",
    "PSModulePath": "${containerWorkspaceFolder}/Modules"
  }
}